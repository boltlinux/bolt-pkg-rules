<?xml version="1.0" encoding="utf-8"?>
<rules>
    <prepare>
    <![CDATA[

cd "$BOLT_BUILD_DIR"
$BOLT_SOURCE_DIR/configure \
    --prefix=/usr \
    --disable-nls

    ]]>
    </prepare>

    <build>
    <![CDATA[

cd "$BOLT_BUILD_DIR"
make -j"$BOLT_PARALLEL_JOBS"

    ]]>
    </build>

    <install>
    <![CDATA[

cd "$BOLT_BUILD_DIR"
make DESTDIR="$BOLT_INSTALL_DIR" install

cp "$BOLT_BUILD_DIR/.libs/libffi_convenience.a" \
    "$BOLT_INSTALL_DIR/usr/lib/libffi_pic.a"

    ]]>
    </install>
</rules>
