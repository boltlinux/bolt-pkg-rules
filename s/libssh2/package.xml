<?xml version="1.0" encoding="utf-8"?>
<control xmlns:xi="http://www.w3.org/2001/XInclude">
    <defines>
        <def name="BOLT_BUILD_DIR" value="build"/>
    </defines>

    <source name="libssh2" architecture-independent="false">
        <description>
            <summary>SSH2 client-side library</summary>
            <p>
            libssh2 is a client-side C library implementing the SSH2 protocol.
            It supports regular terminal, SCP and SFTP (v1-v5) sessions;
            port forwarding, X11 forwarding; password, key-based and
            keyboard-interactive authentication.
            </p>
        </description>

        <xi:include href="copyright.xml"/>

        <sources>
            <file src="libssh2-1.7.0.tar.gz" subdir="sources"
                sha256sum="e4561fd43a50539a8c2ceb37841691baf03ecb7daf043766da1b112e4280d584"/>
            <file src="patches.01.tar.gz" subdir="patches"
                sha256sum="732053ecba5fb95a23cd400c9bfa330cbbc3452653fa35550e6c38525cfb4258"/>
        </sources>
        
        <patches>
            <patchset subdir="sources">
                <file src="patches/0001-Add-lgpg-error-to-.pc-to-facilitate-static-linking.patch"/>
                <file src="patches/0001-Do-not-expose-private-libraries-to-us.patch"/>
            </patchset>
        </patches>

        <requires>
            <package name="libgcrypt20-dev"/>
            <package name="zlib1g-dev"/>
            <package name="chrpath"/>
        </requires>

        <xi:include href="rules.xml"/>
    </source>

    <xi:include href="libssh2-1.xml"/>
    <xi:include href="libssh2-1-dev.xml"/>

    <xi:include href="changelog.xml"/>
</control>
