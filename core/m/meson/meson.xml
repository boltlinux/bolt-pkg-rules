<?xml version="1.0" encoding="utf-8"?>
<package name="meson" section="devel">
    <description>
        <summary>high-productivity build system</summary>
        <p>
        Meson is a build system designed to increase programmer
        productivity. It does this by providing a fast, simple and easy to
        use interface for modern software development tools and practices.
        </p>
    </description>

    <requires>
        <package name="python3:any" version=">= 3.7~"/>
        <package name="ninja-build" version=">= 1.6"/>
        <package name="python3-pkg-resources"/>
    </requires>

    <contents>
        <file src="/usr/bin"/>
        <file src="/usr/lib/python3"/>
        <file src="/usr/share/meson"/>
    </contents>
</package>
