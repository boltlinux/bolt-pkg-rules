<?xml version="1.0" encoding="utf-8"?>
<package name="libglib2.0-bin" section="misc">
    <description>
        <summary>Programs for the GLib library</summary>
        <p>
        GLib is a library containing many useful C routines for things such
        as trees, hashes, lists, and strings. It is a useful general-purpose
        C library used by projects such as GTK+, GIMP, and GNOME.
        </p>
        <p>
        This package contains the program files which is used for the libraries
        and others.
        </p>
    </description>

    <requires>
        <package name="libglib2.0-0" version="=="/>
    </requires>

    <contents>
        <file src="${prefix}/bin/gapplication"/>
        <file src="${prefix}/bin/gdbus"/>
        <file src="${prefix}/bin/gio"/>
        <file src="${prefix}/bin/gio-querymodules"/>
        <file src="${prefix}/bin/glib-compile-schemas"/>
        <file src="${prefix}/bin/gresource"/>
        <file src="${prefix}/bin/gsettings"/>
    </contents>
</package>
