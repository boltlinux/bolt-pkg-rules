<?xml version="1.0" encoding="utf-8"?>
<package name="busybox-findutils-symlinks" section="admin">
    <description>
        <summary>Substitutes for (some) programs from the findutils package</summary>
        <p>
            This package contains the symbolic links for the following applets:
        </p>
        <ul>
            <li>find</li>
            <li>xargs</li>
        </ul>
    </description>

    <requires>
        <package name="busybox"/>
    </requires>

    <conflicts>
        <package name="findutils"/>
    </conflicts>

    <contents>
        <file src="${prefix}/bin/find"/>
        <file src="${prefix}/bin/xargs"/>
    </contents>
</package>
