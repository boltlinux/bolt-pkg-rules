<?xml version="1.0" encoding="utf-8"?>
<package name="busybox-fbset-symlinks" section="admin">
    <description>
        <summary>Substitutes for (some) programs from the fbset package</summary>
        <p>
            This package contains the symbolic links for the following applets:
        </p>
        <ul>
            <li>fbset</li>
        </ul>
    </description>

    <requires>
        <package name="busybox"/>
    </requires>

    <conflicts>
        <package name="fbset"/>
    </conflicts>

    <contents>
        <file src="${prefix}/sbin/fbset"/>
    </contents>
</package>
