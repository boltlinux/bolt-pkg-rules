<?xml version="1.0" encoding="utf-8"?>
<package name="busybox-orville-write-symlinks" section="admin">
    <description>
        <summary>Substitutes for (some) programs from the orville-write package</summary>
        <p>
            This package contains the symbolic links for the following applets:
        </p>
        <ul>
            <li>mesg</li>
        </ul>
    </description>

    <requires>
        <package name="busybox"/>
    </requires>

    <conflicts>
        <package name="orville-write"/>
    </conflicts>

    <contents>
        <file src="${prefix}/bin/mesg"/>
    </contents>
</package>
