<?xml version="1.0" encoding="utf-8"?>
<package name="busybox-util-linux-symlinks" section="admin">
    <description>
        <summary>Substitutes for (some) programs from the util-linux package</summary>
        <p>
            This package contains the symbolic links for the following applets:
        </p>
        <ul>
            <li>blkdiscard</li>
            <li>chrt</li>
            <li>dmesg</li>
            <li>fallocate</li>
            <li>flock</li>
            <li>getopt</li>
            <li>ionice</li>
            <li>ipcrm</li>
            <li>ipcs</li>
            <li>last</li>
            <li>linux32</li>
            <li>linux64</li>
            <li>mesg</li>
            <li>more</li>
            <li>mountpoint</li>
            <li>nsenter</li>
            <li>rev</li>
            <li>setarch</li>
            <li>setpriv</li>
            <li>setsid</li>
            <li>su</li>
            <li>taskset</li>
            <li>unshare</li>
            <li>blkid</li>
            <li>blockdev</li>
            <li>fdformat</li>
            <li>findfs</li>
            <li>fsfreeze</li>
            <li>fstrim</li>
            <li>getty</li>
            <li>hwclock</li>
            <li>mkswap</li>
            <li>pivot_root</li>
            <li>readprofile</li>
            <li>rtcwake</li>
            <li>sulogin</li>
            <li>switch_root</li>
        </ul>
    </description>

    <requires>
        <package name="busybox"/>
    </requires>

    <conflicts>
        <package name="util-linux"/>
    </conflicts>

    <replaces>
        <package name="util-linux"/>
    </replaces>

