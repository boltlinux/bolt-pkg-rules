<?xml version="1.0" encoding="utf-8"?>
<package name="busybox-cpio-symlinks" section="admin">
    <description>
        <summary>Substitutes for (some) programs from the cpio package</summary>
        <p>
            This package contains the symbolic links for the following applets:
        </p>
        <ul>
            <li>cpio</li>
            <li>mt</li>
        </ul>
    </description>

    <requires>
        <package name="busybox"/>
    </requires>

    <conflicts>
        <package name="cpio"/>
    </conflicts>

    <replaces>
        <package name="cpio"/>
    </replaces>

    <contents>
        <file src="/usr/bin/cpio"/>
        <file src="/usr/bin/mt"/>
    </contents>
</package>
