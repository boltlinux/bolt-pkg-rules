<?xml version="1.0" encoding="utf-8"?>
<package name="busybox-daemontools-symlinks" section="admin">
    <description>
        <summary>Substitutes for (some) programs from the daemontools package</summary>
        <p>
            This package contains the symbolic links for the following applets:
        </p>
        <ul>
            <li>envdir</li>
            <li>envuidgid</li>
            <li>setuidgid</li>
            <li>softlimit</li>
            <li>svc</li>
            <li>svok</li>
        </ul>
    </description>

    <requires>
        <package name="busybox"/>
    </requires>

    <conflicts>
        <package name="daemontools"/>
    </conflicts>

    <replaces>
        <package name="daemontools"/>
    </replaces>

    <contents>
        <file src="${prefix}/bin/envdir"/>
        <file src="${prefix}/bin/envuidgid"/>
        <file src="${prefix}/bin/setuidgid"/>
        <file src="${prefix}/bin/softlimit"/>
        <file src="${prefix}/bin/svc"/>
        <file src="${prefix}/bin/svok"/>
    </contents>
</package>
