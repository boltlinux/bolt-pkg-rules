<?xml version="1.0" encoding="utf-8"?>
<package name="busybox-ncurses-bin-symlinks" section="admin">
    <description>
        <summary>Substitutes for (some) programs from the ncurses-bin package</summary>
        <p>
            This package contains the symbolic links for the following applets:
        </p>
        <ul>
            <li>clear</li>
            <li>reset</li>
        </ul>
    </description>

    <requires>
        <package name="busybox"/>
    </requires>

    <conflicts>
        <package name="ncurses-bin"/>
    </conflicts>

    <replaces>
        <package name="ncurses-bin"/>
    </replaces>

    <contents>
        <file src="/usr/bin/clear"/>
        <file src="/usr/bin/reset"/>
    </contents>
</package>
