<?xml version="1.0" encoding="utf-8"?>
<package name="busybox-bind9-dnsutils-symlinks" section="admin">
    <description>
        <summary>Substitutes for (some) programs from the bind9-dnsutils package</summary>
        <p>
            This package contains the symbolic links for the following applets:
        </p>
        <ul>
            <li>nslookup</li>
        </ul>
    </description>

    <requires>
        <package name="busybox"/>
    </requires>

    <conflicts>
        <package name="bind9-dnsutils"/>
    </conflicts>

    <replaces>
        <package name="bind9-dnsutils"/>
    </replaces>

    <contents>
        <file src="/usr/bin/nslookup"/>
    </contents>
</package>
