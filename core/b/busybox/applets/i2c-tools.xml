<?xml version="1.0" encoding="utf-8"?>
<package name="busybox-i2c-tools-symlinks" section="admin">
    <description>
        <summary>Substitutes for (some) programs from the i2c-tools package</summary>
        <p>
            This package contains the symbolic links for the following applets:
        </p>
        <ul>
            <li>i2cdetect</li>
            <li>i2cdump</li>
            <li>i2cget</li>
            <li>i2cset</li>
            <li>i2ctransfer</li>
        </ul>
    </description>

    <requires>
        <package name="busybox"/>
    </requires>

    <conflicts>
        <package name="i2c-tools"/>
    </conflicts>

    <replaces>
        <package name="i2c-tools"/>
    </replaces>

    <contents>
        <file src="/usr/sbin/i2cdetect"/>
        <file src="/usr/sbin/i2cdump"/>
        <file src="/usr/sbin/i2cget"/>
        <file src="/usr/sbin/i2cset"/>
        <file src="/usr/sbin/i2ctransfer"/>
    </contents>
</package>
