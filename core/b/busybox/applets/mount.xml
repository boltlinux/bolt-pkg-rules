<?xml version="1.0" encoding="utf-8"?>
<package name="busybox-mount-symlinks" section="admin">
    <description>
        <summary>Substitutes for (some) programs from the mount package</summary>
        <p>
            This package contains the symbolic links for the following applets:
        </p>
        <ul>
            <li>mount</li>
            <li>umount</li>
            <li>losetup</li>
            <li>swapoff</li>
            <li>swapon</li>
        </ul>
    </description>

    <requires>
        <package name="busybox"/>
    </requires>

    <conflicts>
        <package name="mount"/>
    </conflicts>

    <replaces>
        <package name="mount"/>
    </replaces>

    <contents>
        <file src="/usr/bin/mount"/>
        <file src="/usr/bin/umount"/>
        <file src="/usr/sbin/losetup"/>
        <file src="/usr/sbin/swapoff"/>
        <file src="/usr/sbin/swapon"/>
    </contents>
</package>
