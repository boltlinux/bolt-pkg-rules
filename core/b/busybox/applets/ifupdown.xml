<?xml version="1.0" encoding="utf-8"?>
<package name="busybox-ifupdown-symlinks" section="admin">
    <description>
        <summary>Substitutes for (some) programs from the ifupdown package</summary>
        <p>
            This package contains the symbolic links for the following applets:
        </p>
        <ul>
            <li>ifdown</li>
            <li>ifup</li>
        </ul>
    </description>

    <requires>
        <package name="busybox"/>
    </requires>

    <conflicts>
        <package name="ifupdown"/>
    </conflicts>

    <replaces>
        <package name="ifupdown"/>
    </replaces>

    <contents>
        <file src="/usr/sbin/ifdown"/>
        <file src="/usr/sbin/ifup"/>
    </contents>
</package>
