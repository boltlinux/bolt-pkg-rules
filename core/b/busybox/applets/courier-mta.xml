<?xml version="1.0" encoding="utf-8"?>
<package name="busybox-courier-mta-symlinks" section="admin">
    <description>
        <summary>Substitutes for (some) programs from the courier-mta package</summary>
        <p>
            This package contains the symbolic links for the following applets:
        </p>
        <ul>
            <li>sendmail</li>
        </ul>
    </description>

    <requires>
        <package name="busybox"/>
    </requires>

    <conflicts>
        <package name="courier-mta"/>
    </conflicts>

    <replaces>
        <package name="courier-mta"/>
    </replaces>

    <contents>
        <file src="${prefix}/sbin/sendmail"/>
    </contents>
</package>
