<?xml version="1.0" encoding="utf-8"?>
<package name="busybox-passwd-symlinks" section="admin">
    <description>
        <summary>Substitutes for (some) programs from the passwd package</summary>
        <p>
            This package contains the symbolic links for the following applets:
        </p>
        <ul>
            <li>passwd</li>
            <li>chpasswd</li>
        </ul>
    </description>

    <requires>
        <package name="busybox"/>
    </requires>

    <conflicts>
        <package name="passwd"/>
    </conflicts>

    <replaces>
        <package name="passwd"/>
    </replaces>

    <contents>
        <file src="/usr/bin/passwd"/>
        <file src="/usr/sbin/chpasswd"/>
    </contents>
</package>
