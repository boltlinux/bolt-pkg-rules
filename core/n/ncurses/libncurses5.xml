<?xml version="1.0" encoding="utf-8"?>
<package name="libncurses5" section="libs">
    <description>
        <summary>shared libraries for terminal handling</summary>
        <p>
        The ncurses library routines are a terminal-independent method of
        updating character screens with reasonable optimization.
        </p>
        <p>
        This package contains the shared libraries necessary to run programs
        compiled with ncurses.
        </p>
    </description>

    <requires>
        <package name="libtinfo5" version="=="/>
    </requires>

    <contents>
        <file src="${prefix}/lib/libform.so.*"/>
        <file src="${prefix}/lib/libmenu.so.*"/>
        <file src="${prefix}/lib/libncurses.so.*"/>
        <file src="${prefix}/lib/libpanel.so.*"/>
    </contents>
</package>
