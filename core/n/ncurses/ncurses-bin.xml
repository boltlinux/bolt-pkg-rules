<?xml version="1.0" encoding="utf-8"?>
<package name="ncurses-bin" section="utils">
    <description>
        <summary>Terminal-related programs and man pages</summary>
        <p>
        The ncurses library routines are a terminal-independent method of
        updating character screens with reasonable optimization.
        </p>
        <p>
        This package contains the programs used for manipulating the terminfo
        database and individual terminfo entries, as well as some programs for
        resetting terminals and such.
        </p>
    </description>

    <conflicts>
        <package name="busybox-ncurses-bin-symlinks"/>
    </conflicts>

    <replaces>
        <package name="busybox-ncurses-bin-symlinks"/>
    </replaces>

    <contents>
        <file src="${prefix}/bin/captoinfo"/>
        <file src="${prefix}/bin/clear"/>
        <file src="${prefix}/bin/infocmp"/>
        <file src="${prefix}/bin/infotocap"/>
        <file src="${prefix}/bin/reset"/>
        <file src="${prefix}/bin/tabs"/>
        <file src="${prefix}/bin/tic"/>
        <file src="${prefix}/bin/toe"/>
        <file src="${prefix}/bin/tput"/>
        <file src="${prefix}/bin/tset"/>
    </contents>
</package>
