<?xml version="1.0" encoding="utf-8"?>
<package name="auditd" section="admin">
    <description>
        <summary>User space tools for security auditing</summary>
        <p>
        The audit package contains the user space utilities for
        storing and searching the audit records generated by
        the audit subsystem in the Linux 2.6 kernel.
        </p>
        <p>
        Also contains the audit dispatcher "audisp".
        </p>
    </description>

    <contents>
        <file src="/etc/audisp/audispd.conf"/>
        <file src="/etc/audisp/plugins.d/af_unix.conf"/>
        <file src="/etc/audisp/plugins.d/syslog.conf"/>
        <file src="/etc/audit"/>
        <file src="${prefix}/lib/systemd/system/auditd.service"/>
        <file src="${prefix}/bin/aulast"/>
        <file src="${prefix}/bin/aulastlog"/>
        <file src="${prefix}/bin/ausyscall"/>
        <file src="${prefix}/bin/auvirt"/>
        <file src="${prefix}/sbin/audispd"/>
        <file src="${prefix}/sbin/auditctl"/>
        <file src="${prefix}/sbin/auditd"/>
        <file src="${prefix}/sbin/augenrules"/>
        <file src="${prefix}/sbin/aureport"/>
        <file src="${prefix}/sbin/ausearch"/>
        <file src="${prefix}/sbin/autrace"/>

        <!-- explicit mode overrides -->
        <dir src="/etc/audit" mode="0750"/>
        <dir src="/etc/audit/rules.d"/>
        <dir src="/etc/audisp" mode="0750"/>
        <dir src="/etc/audisp/plugins.d" mode="0750"/>
        <dir src="/var/log/audit" mode="0750"/>
    </contents>
</package>
