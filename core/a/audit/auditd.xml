<?xml version="1.0" encoding="utf-8"?>
<package name="auditd" section="admin">
    <description>
        <summary>User space tools for security auditing</summary>
        <p>
        The audit package contains the user space utilities for storing and
        searching the audit records generated by the audit subsystem in the
        Linux kernel. It also contains the audit dispatcher "audisp".
        </p>
    </description>

    <contents>
        <file src="/etc/audit/audit-stop.rules" mode="0640"/>
        <file src="/etc/audit/auditd.conf" mode="0640"/>
        <file src="/etc/audit/plugins.d/af_unix.conf" mode="0640"/>
        <file src="/etc/audit/plugins.d/syslog.conf" mode="0640"/>
        <file src="/etc/audit/rules.d"/>

        <file src="${prefix}/bin"/>
        <file src="${prefix}/sbin/audisp-syslog"/>
        <file src="${prefix}/sbin/auditctl"/>
        <file src="${prefix}/sbin/auditd"/>
        <file src="${prefix}/sbin/augenrules"/>
        <file src="${prefix}/sbin/aureport"/>
        <file src="${prefix}/sbin/ausearch"/>
        <file src="${prefix}/sbin/autrace"/>

        <dir src="/etc/audit" mode="0750"/>
        <dir src="/etc/audit/plugins.d" mode="0750"/>
        <dir src="/etc/audit/rules.d" mode="0750"/>
        <dir src="/var/log/audit" mode="0750" group="adm"/>
    </contents>
</package>
