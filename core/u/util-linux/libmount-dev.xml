<?xml version="1.0" encoding="utf-8"?>
<package name="libmount-dev" section="libdevel">
    <description>
        <summary>Device mounting library - headers and static libraries</summary>
        <p>
        This device mounting library is used by mount and umount helpers.
        </p>
        <p>
        This package contains the development environment for the mount library.
        </p>
    </description>

    <requires>
        <package name="libc-dev"/>
        <package name="libmount1" version="=="/>
        <package name="libblkid-dev"/>
    </requires>

    <contents>
        <file src="${prefix}/include/libmount"/>
        <file src="${prefix}/lib/libmount.a"/>
        <file src="${prefix}/lib/libmount.so"/>
        <file src="${prefix}/lib/pkgconfig/mount.pc"/>
    </contents>
</package>
