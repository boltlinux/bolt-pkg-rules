<?xml version="1.0" encoding="utf-8"?>
<package name="mount" section="admin">
    <description>
        <summary>Tools for mounting and manipulating filesystems</summary>
        <p>
            This package provides the mount, umount, swapon, swapoff, and losetup
            commands.
        </p>
    </description>

    <conflicts>
        <package name="busybox-mount-symlinks"/>
    </conflicts>

    <replaces>
        <package name="busybox-mount-symlinks"/>
    </replaces>

    <contents>
        <file src="${prefix}/bin/findmnt"/>
        <file src="${prefix}/bin/mount"/>
        <file src="${prefix}/bin/umount"/>
        <file src="${prefix}/sbin/losetup"/>
        <file src="${prefix}/sbin/swapoff"/>
        <file src="${prefix}/sbin/swapon"/>
    </contents>
</package>
