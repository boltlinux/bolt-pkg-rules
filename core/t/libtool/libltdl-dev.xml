<?xml version="1.0" encoding="utf-8"?>
<package name="libltdl-dev" section="libdevel">
    <description>
        <summary>System independent dlopen wrapper for GNU libtool</summary>
        <p>
        This package contains the header files and static libraries for the
        libltdl package.
        </p>
        <p>
        A small library that aims at hiding the various difficulties of
        dlopening libraries from programmers. It is a system independent
        dlopen wrapper for GNU libtool.
        </p>
        <p>
            It supports the following dlopen interfaces:
        </p>
        <ul>
            <li>dlopen (Solaris, Linux and various BSD flavors)</li>
            <li>shl_load (HP-UX)</li>
            <li>LoadLibrary (Win16 and Win32)</li>
            <li>load_add_on (BeOS)</li>
            <li>GNU DLD (emulates dynamic linking for static libraries)</li>
            <li>libtool's dlpreopen</li>
        </ul>
    </description>

    <requires>
        <package name="libltdl7" version="=="/>
    </requires>

    <contents>
        <file src="${prefix}/include"/>
        <file src="${prefix}/lib/libltdl.a"/>
        <file src="${prefix}/lib/libltdl.so"/>
        <file src="${prefix}/share/aclocal/ltdl.m4"/>
        <file src="${prefix}/share/libtool/COPYING.LIB"/>
        <file src="${prefix}/share/libtool/Makefile.am"/>
        <file src="${prefix}/share/libtool/Makefile.in"/>
        <file src="${prefix}/share/libtool/README"/>
        <file src="${prefix}/share/libtool/aclocal.m4"/>
        <file src="${prefix}/share/libtool/config-h.in"/>
        <file src="${prefix}/share/libtool/configure" mode="0755"/>
        <file src="${prefix}/share/libtool/configure.ac"/>
        <file src="${prefix}/share/libtool/libltdl"/>
        <file src="${prefix}/share/libtool/loaders"/>
        <file src="${prefix}/share/libtool/lt__alloc.c"/>
        <file src="${prefix}/share/libtool/lt__argz.c"/>
        <file src="${prefix}/share/libtool/lt__dirent.c"/>
        <file src="${prefix}/share/libtool/lt__strl.c"/>
        <file src="${prefix}/share/libtool/lt_dlloader.c"/>
        <file src="${prefix}/share/libtool/lt_error.c"/>
        <file src="${prefix}/share/libtool/ltdl.c"/>
        <file src="${prefix}/share/libtool/ltdl.h"/>
        <file src="${prefix}/share/libtool/ltdl.mk"/>
        <file src="${prefix}/share/libtool/slist.c"/>
    </contents>
</package>
