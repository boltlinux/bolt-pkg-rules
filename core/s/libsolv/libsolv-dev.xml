        <file src="${prefix}/include/solv/pooltypes.h"/>
        <file src="${prefix}/include/solv/poolvendor.h"/>
        <file src="${prefix}/include/solv/problems.h"/>
        <file src="${prefix}/include/solv/queue.h"/>
        <file src="${prefix}/include/solv/repo.h"/>
        <file src="${prefix}/include/solv/repodata.h"/>
