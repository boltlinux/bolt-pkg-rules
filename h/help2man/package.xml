<?xml version="1.0" encoding="utf-8"?>
<control xmlns:xi="http://www.w3.org/2001/XInclude">
    <defines>
        <def name="BOLT_BUILD_DIR" value="build"/>
    </defines>

    <source name="help2man" architecture-independent="false">
        <description>
            <summary>Automatic manpage generator</summary>
            <p>
            Program to create simple man pages from the --help and
            --version output of other programs.
            </p>
            <p>
            Since most GNU documentation is now in info format, this provides a
            way to generate a placeholder man page pointing to that resource while
            still providing some useful information.
            </p>
        </description>

        <sources>
            <file src="help2man-1.47.4.tar.xz" subdir="sources"
                sha256sum="d4ecf697d13f14dd1a78c5995f06459bff706fd1ce593d1c02d81667c0207753"/>
        </sources>

        <requires>
            <package name="perl" version=">= 5.8.0-7"/>
        </requires>

        <xi:include href="rules.xml"/>
    </source>

    <xi:include href="help2man.xml"/>

    <xi:include href="changelog.xml"/>
</control>
