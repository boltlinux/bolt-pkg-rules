<?xml version="1.0" encoding="utf-8"?>
<rules>
    <prepare>
    <![CDATA[

cd "$BOLT_SOURCE_DIR"
./bootstrap.sh
autoreconf -vi

cd "$BOLT_BUILD_DIR"
"$BOLT_SOURCE_DIR/configure" \
    --prefix="$BOLT_INSTALL_PREFIX" \
    --build="$BOLT_HOST_TYPE" \
    --host="$BOLT_HOST_TYPE" \
    --disable-silent-rules

    ]]>
    </prepare>

    <build>
    <![CDATA[

cd "$BOLT_BUILD_DIR"
make MAKEINFO=true

    ]]>
    </build>

    <install>
    <![CDATA[

cd "$BOLT_BUILD_DIR"
make CC="${BOLT_HOST_TYPE}-gcc" MAKEINFO=true \
    DESTDIR="$BOLT_INSTALL_DIR" install

    ]]>
    </install>
</rules>
