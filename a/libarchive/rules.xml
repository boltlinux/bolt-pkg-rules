<?xml version="1.0" encoding="utf-8"?>
<rules>
    <prepare>
    <![CDATA[

cd "$BOLT_SOURCE_DIR"
autoreconf -vfi

cd "$BOLT_BUILD_DIR"
$BOLT_SOURCE_DIR/configure \
    --prefix=/usr \
    --without-openssl \
    --with-nettle \
    --enable-bsdtar=shared \
    --enable-bsdcpio=shared \
    --enable-bsdcat=shared

    ]]>
    </prepare>

    <build>
    <![CDATA[

cd "$BOLT_BUILD_DIR"
make -j"$BOLT_PARALLEL_JOBS"

    ]]>
    </build>

    <install>
    <![CDATA[

cd "$BOLT_BUILD_DIR"
make DESTDIR="$BOLT_INSTALL_DIR" install

    ]]>
    </install>
</rules>
