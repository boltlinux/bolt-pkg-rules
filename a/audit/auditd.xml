<?xml version="1.0" encoding="utf-8"?>
<package name="auditd" section="admin">
    <description>
        <summary>User space tools for security auditing</summary>
        <p>
        The audit package contains the user space utilities for
        storing and searching the audit records generated by
        the audit subsystem in the Linux 2.6 kernel.
        </p>
        <p>
        Also contains the audit dispatcher "audisp".
        </p>
    </description>

    <requires>
        <package name="lsb-base" version=">= 3.0-6"/>
        <choice>
            <package name="mawk"/>
            <package name="gawk"/>
        </choice>
    </requires>

    <contents>
        <dir src="/etc/audit"/>
        <dir src="/var/log/audit"/>
        <file src="/usr/bin/aulast"/>
        <file src="/usr/bin/aulastlog"/>
        <file src="/usr/bin/ausyscall"/>
        <file src="/usr/bin/auvirt"/>
        <file src="/usr/sbin/audispd"/>
        <file src="/usr/sbin/auditctl"/>
        <file src="/usr/sbin/auditd"/>
        <file src="/usr/sbin/augenrules"/>
        <file src="/usr/sbin/aureport"/>
        <file src="/usr/sbin/ausearch"/>
        <file src="/usr/sbin/autrace"/>
    </contents>
</package>
