<?xml version="1.0" encoding="utf-8"?>
<control xmlns:xi="http://www.w3.org/2001/XInclude">
    <defines>
        <def name="BOLT_BUILD_DIR" value="build"/>
    </defines>

    <source name="audit" architecture-independent="false">
        <description>
            <summary>User space tools and libraries for security auditing</summary>
            <p>
            The audit package contains the user space utilities and libraries for
            storing and searching the audit records generated by the audit subsystem
            in the Linux 2.6 kernel.
            </p>
        </description>

        <sources>
            <file src="audit-2.6.7.tar.gz" subdir="sources"
                sha256sum="8923917332daa7833bbc0c1d9eb012167093fbad000da4a9630fb3356aff8cdc"/>
            <file src="patches.01.tar.gz" subdir="patches"
                sha256sum="3239dd345d7523bd9c1b071ed715bfdeb78f9e3769b080b7e40287593e849c91"/>
            <file src="patches.bolt.tar.gz" subdir="patches"
                sha256sum="308f2e51f8f4aa44c3218bdd68a99e557dfcee5521dcdc60a1825767b087bc3f"/>
        </sources>
        
        <patches>
            <patchset subdir="sources">
                <!-- Debian -->
                <file src="patches/01-no-refusemanualstop.patch"/>
                <file src="patches/02-restorecon-path.patch"/>
                <!-- Bolt -->
                <file src="patches/musl-libc-compat.patch"/>
            </patchset>
        </patches>

        <requires>
            <package name="libcap-ng-dev"/>
        </requires>

        <xi:include href="rules.xml"/>
    </source>

    <xi:include href="auditd.xml"/>
    <xi:include href="libauparse0.xml"/>
    <xi:include href="libauparse-dev.xml"/>
    <xi:include href="libaudit1.xml"/>
    <xi:include href="libaudit-common.xml"/>
    <xi:include href="libaudit-dev.xml"/>
    <xi:include href="audispd-plugins.xml"/>

    <xi:include href="changelog.xml"/>
</control>
