<?xml version="1.0" encoding="utf-8"?>
<control xmlns:xi="http://www.w3.org/2001/XInclude">
    <defines>
        <def name="BOLT_BUILD_DIR" value="build"/>
    </defines>

    <source name="libassuan" architecture-independent="false">
        <description>
            <summary>IPC library for the GnuPG components</summary>
            <p>
            Libassuan is a small library implementing the so-called "Assuan
            protocol". This protocol is used for IPC between most newer GnuPG
            components. Both server and client side functions are provided.
            </p>
        </description>

        <sources>
            <file src="libassuan-2.4.3.tar.bz2" subdir="sources"
                sha256sum="22843a3bdb256f59be49842abf24da76700354293a066d82ade8134bb5aa2b71"/>
            <file src="patches.02.tar.gz" subdir="patches"
                sha256sum="d25e83ba7c8f1618cf37b7cd405d00e1486ed8b4fd0ee7539804e66a568f40a8"/>
        </sources>
        
        <patches>
            <patchset subdir="sources">
                <file src="patches/0001-avoid-linker-errors-when-cross-building-for-win32.patch"/>
                <file src="patches/0002-avoid-self-describing-as-a-beta.patch"/>
            </patchset>
        </patches>

        <requires>
            <package name="autoconf"/>
            <package name="libgpg-error-dev" version=">= 1.17"/>
        </requires>

        <xi:include href="rules.xml"/>
    </source>

    <xi:include href="libassuan0.xml"/>
    <xi:include href="libassuan-dev.xml"/>

    <xi:include href="changelog.xml"/>
</control>
