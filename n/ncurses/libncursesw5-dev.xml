<?xml version="1.0" encoding="utf-8"?>
<package name="libncursesw5-dev" section="libdevel">
    <description>
        <summary>developer's libraries for ncursesw</summary>
        <p>
        The ncurses library routines are a terminal-independent method of
        updating character screens with reasonable optimization.
        </p>
        <p>
        This package contains the header files, static libraries
        and symbolic links that developers using ncursesw will need.
        </p>
        <p>
        This package includes support for wide characters.
        </p>
    </description>

    <requires>
        <package name="libtinfo5" version="=="/>
        <package name="libncursesw5" version="=="/>
        <package name="libtinfo-dev" version="=="/>
    </requires>

    <contents>
        <file src="${prefix}/bin/ncursesw5-config"/>
        <file src="${prefix}/include/ncursesw"/>
        <file src="${prefix}/lib/libformw.a"/>
        <file src="${prefix}/lib/libformw.so"/>
        <file src="${prefix}/lib/libmenuw.a"/>
        <file src="${prefix}/lib/libmenuw.so"/>
        <file src="${prefix}/lib/libncurses++w.a"/>
        <file src="${prefix}/lib/libncursesw.a"/>
        <file src="${prefix}/lib/libncursesw.so"/>
        <file src="${prefix}/lib/libpanelw.a"/>
        <file src="${prefix}/lib/libpanelw.so"/>
        <file src="${prefix}/lib/pkgconfig/formw.pc"/>
        <file src="${prefix}/lib/pkgconfig/menuw.pc"/>
        <file src="${prefix}/lib/pkgconfig/ncurses++w.pc"/>
        <file src="${prefix}/lib/pkgconfig/ncursesw.pc"/>
        <file src="${prefix}/lib/pkgconfig/panelw.pc"/>
    </contents>
</package>
