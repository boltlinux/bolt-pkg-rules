    <source name="ncurses" architecture-independent="false">
        <description>
            <summary>libraries for terminal handling</summary>
            <p>
            The ncurses library routines are a terminal-independent method of
            updating character screens with reasonable optimization.
            </p>
        </description>

        <sources>
            <file src="ncurses-6.0+20161126.tar.gz" subdir="sources"
                sha256sum="e4b9cf1cfcf5a2db7df1d36402967783ba759246c8ff5a17a85ffd7e79296ec0"/>
            <file src="patches.01.tar.gz" subdir="patches"
                sha256sum="cf1a7ea09968e1d92983b10d2f42eb8e8429a3fd43f07c99f901df7ec2e812d7"/>
        </sources>
        
        <patches>
            <patchset subdir="sources">
                <file src="patches/01-debian-no-ada-doc.diff"/>
                <file src="patches/02-debian-backspace.diff"/>
                <file src="patches/03-debian-ncursesconfig-omit-L.diff"/>
            </patchset>
        </patches>

        <requires>
            <package name="pkg-config"/>
            <package name="autotools-dev"/>
        </requires>

        <xi:include href="rules.xml"/>
    </source>

    <xi:include href="libtinfo5.xml"/>
