    <source name="nss-pem" architecture-independent="false">
        <description>
            <summary>PEM file reader for Network Security Services (NSS)</summary>
            <p>
            This library enables NSS to read PEM encoded certificates.
            </p>
        </description>

        <sources>
            <file src="nss-pem-1.0.3.tar.gz" subdir="sources"
                sha256sum="1fa82c71220aebfdc2d729cb49c7654dfffb9ee13832df745a1a0a2e84b4d844"/>
        </sources>
        
        <requires>
            <package name="libnspr4-dev"/>
            <package name="libnss3-dev"/>
        </requires>

        <xi:include href="rules.xml"/>
    </source>

    <xi:include href="libnsspem1.xml"/>
    <xi:include href="libnsspem-dev.xml"/>

    <xi:include href="changelog.xml"/>
</control>
