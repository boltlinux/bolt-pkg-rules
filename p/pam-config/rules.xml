<?xml version="1.0" encoding="utf-8"?>
<rules>
    <prepare>
    <![CDATA[

cd "$BOLT_SOURCE_DIR"
./autogen.sh

cd "$BOLT_BUILD_DIR"
$BOLT_SOURCE_DIR/configure \
    --prefix=/usr

    ]]>
    </prepare>

    <build>
    <![CDATA[

cd "$BOLT_BUILD_DIR"
make -C src -j"$BOLT_PARALLEL_JOBS" pam-config

    ]]>
    </build>

    <install>
    <![CDATA[

install -d -m 0755 "$BOLT_INSTALL_DIR/usr/sbin"
install -m 0755 "$BOLT_BUILD_DIR/src/pam-config" \
    "$BOLT_INSTALL_DIR/usr/sbin/"

    ]]>
    </install>
</rules>
