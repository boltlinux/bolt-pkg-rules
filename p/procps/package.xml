<?xml version="1.0" encoding="utf-8"?>
<control xmlns:xi="http://www.w3.org/2001/XInclude">
    <defines>
        <def name="BOLT_BUILD_DIR" value="build"/>
    </defines>

    <source name="procps" architecture-independent="false">
        <description>
            <summary>/proc file system utilities</summary>
            <p>
            This package provides command line and full screen utilities for browsing
            procfs, a "pseudo" file system dynamically generated by the kernel to
            provide information about the status of entries in its process table
            (such as whether the process is running, stopped, or a "zombie").
            </p>
            <p>
            It contains free, kill, pkill, pgrep, pmap, ps, pwdx, skill, slabtop,
            snice, sysctl, tload, top, uptime, vmstat, w, and watch.
            </p>
        </description>

        <sources>
            <file src="procps-3.3.15.tar.xz" subdir="sources"
                sha256sum="82e8aa55b65eac116eee05f00d2a884a6374760d57100edd429d6e9b4953458d"/>
            <file src="debian-patches-2.tar.gz" subdir="patches"
                sha256sum="8cecd340d2fdabaa4965d48644253575ec1cb34ad29692b4e5a896f41e264128"/>
        </sources>

        <patches>
            <patchset subdir="sources">
                <file src="patches/fix_checks"/>
                <file src="patches/remove_strtod_tests"/>
                <file src="patches/watch_hostname_max_define"/>
                <file src="patches/disable_sched_test"/>
                <file src="patches/uptime_test"/>
                <file src="patches/ps_checks"/>
            </patchset>
        </patches>

        <requires>
            <package name="libncurses5-dev"/>
            <package name="libncursesw5-dev"/>
            <package name="pkg-config"/>
        </requires>

        <xi:include href="rules.xml"/>
    </source>

    <xi:include href="procps.xml"/>
    <xi:include href="libprocps7.xml"/>
    <xi:include href="libprocps-dev.xml"/>

    <xi:include href="changelog.xml"/>
</control>
