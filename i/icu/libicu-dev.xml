<?xml version="1.0" encoding="utf-8"?>
<package name="libicu-dev" section="libdevel">
    <description>
        <summary>Development files for International Components for Unicode</summary>
        <p>
        ICU is a C++ and C library that provides robust and full-featured
        Unicode and locale support. This package contains the development
        files for ICU.
        </p>
    </description>

    <requires>
        <package name="libicu57" version="=="/>
        <package name="icu-devtools" version=">=="/>
        <package name="libc6-dev"/>
        <package name="libstdc++-6-dev"/>
    </requires>

    <contents>
        <file src="${prefix}/bin/icu-config"/>
        <file src="${prefix}/include/layout"/>
        <file src="${prefix}/include/unicode"/>
        <file src="${prefix}/lib/icu"/>
        <file src="${prefix}/lib/libicudata.a"/>
        <file src="${prefix}/lib/libicudata.so"/>
        <file src="${prefix}/lib/libicui18n.a"/>
        <file src="${prefix}/lib/libicui18n.so"/>
        <file src="${prefix}/lib/libicuio.a"/>
        <file src="${prefix}/lib/libicuio.so"/>
        <file src="${prefix}/lib/libicule.a"/>
        <file src="${prefix}/lib/libicule.so"/>
        <file src="${prefix}/lib/libiculx.a"/>
        <file src="${prefix}/lib/libiculx.so"/>
        <file src="${prefix}/lib/libicutest.a"/>
        <file src="${prefix}/lib/libicutest.so"/>
        <file src="${prefix}/lib/libicutu.a"/>
        <file src="${prefix}/lib/libicutu.so"/>
        <file src="${prefix}/lib/libicuuc.a"/>
        <file src="${prefix}/lib/libicuuc.so"/>
        <file src="${prefix}/lib/pkgconfig"/>
        <file src="${prefix}/share/icu/57.1"/>
    </contents>
</package>
