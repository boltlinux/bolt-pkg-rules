<?xml version="1.0" encoding="utf-8"?>
<control xmlns:xi="http://www.w3.org/2001/XInclude">
    <defines>
        <def name="BOLT_BUILD_DIR" value="build"/>
    </defines>

    <source name="icu" architecture-independent="false">
        <description>
            <summary>International Components for Unicode</summary>
            <p>
            ICU is a C++ and C library that provides robust and full-featured
            Unicode and locale support. This package contains the runtime
            libraries for ICU.
            </p>
        </description>

        <sources>
            <file src="icu-57.1.tar.gz" subdir="sources"
                sha256sum="ff8c67cb65949b1e7808f2359f2b80f722697048e90e7cfc382ec1fe229e9581"/>
            <file src="patches.05.tar.gz" subdir="patches"
                sha256sum="507d8dba07675d8becb20af2e100ec18ce2b8177b323c2a220a05781bbd1a230"/>
        </sources>
        
        <patches>
            <patchset subdir="sources">
                <file src="patches/icudata-stdlibs.patch"/>
                <file src="patches/gennorm2-man.patch"/>
                <file src="patches/icuinfo-man.patch"/>
                <file src="patches/malayalam-rendering.patch"/>
                <file src="patches/indic-ccmp.patch"/>
                <file src="patches/CVE-2014-6585.patch"/>
                <file src="patches/CVE-2015-4760.patch"/>
                <file src="patches/hurd-fix.diff"/>
                <file src="patches/CVE-2016-0494.patch"/>
                <file src="patches/CVE-2016-6293.patch"/>
                <file src="patches/CVE-2016-7415.patch"/>
            </patchset>
        </patches>

        <requires>
            <package name="autotools-dev"/>
        </requires>

        <xi:include href="rules.xml"/>
    </source>

    <xi:include href="libicu57.xml"/>
    <xi:include href="libicu-dev.xml"/>
    <xi:include href="icu-devtools.xml"/>

    <xi:include href="changelog.xml"/>
</control>
