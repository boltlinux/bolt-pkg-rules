<?xml version="1.0" encoding="utf-8"?>
<rules>

    <prepare>
    <![CDATA[

cd $XPACK_SOURCE_DIR
autoreconf

cd $XPACK_BUILD_DIR
$XPACK_SOURCE_DIR/configure \
    --prefix=/usr \
    --disable-nls

    ]]>
    </prepare>

    <build>
    <![CDATA[

cd $XPACK_BUILD_DIR
make -j$XPACK_PARALLEL_JOBS

    ]]>
    </build>

    <install>
    <![CDATA[

cd $XPACK_BUILD_DIR
make DESTDIR=$XPACK_INSTALL_DIR install

    ]]>
    </install>

</rules>
