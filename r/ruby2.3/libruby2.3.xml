<?xml version="1.0" encoding="utf-8"?>
<package name="libruby2.3" section="libs">
    <description>
        <summary>Libraries necessary to run Ruby 2.3</summary>
        <p>
        Ruby is the interpreted scripting language for quick and easy
        object-oriented programming. It has many features to process text
        files and to do system management tasks (as in perl). It is simple,
        straight-forward, and extensible.
        </p>
        <p>
        This package includes the 'libruby-2.3' library, necessary to run Ruby 2.3.
        (API version 2.3.0)
        </p>
    </description>

    <requires>
        <package name="rake" version=">= 10.4.2"/>
        <package name="ruby-did-you-mean" version=">= 1.0"/>
        <package name="ruby-minitest" version=">= 5.4"/>
        <package name="ruby-net-telnet" version=">= 0.1.1"/>
        <package name="ruby-test-unit" version=">= 3.0.8~"/>
    </requires>

    <contents>
        <file src="/usr/lib/libruby-2.3.so.*"/>
        <file src="/usr/lib/ruby/2.3.0/"/>
        <dir src="/usr/lib/ruby/gems/2.3.0/build_info"/>
        <dir src="/usr/lib/ruby/gems/2.3.0/cache"/>
        <dir src="/usr/lib/ruby/gems/2.3.0/doc"/>
        <dir src="/usr/lib/ruby/gems/2.3.0/extensions"/>
        <dir src="/usr/lib/ruby/gems/2.3.0/gems"/>
        <dir src="/usr/lib/ruby/gems/2.3.0/gems/rdoc-4.2.1"/>
        <file src="/usr/lib/ruby/gems/2.3.0/gems/rdoc-4.2.1/bin"/>
        <dir src="/usr/lib/ruby/gems/2.3.0/specifications"/>
        <file src="/usr/lib/ruby/gems/2.3.0/specifications/default"/>
        <dir src="/usr/lib/ruby/vendor_ruby"/>
        <dir src="/usr/lib/ruby/vendor_ruby/2.3.0"/>
        <dir src="/usr/share/systemtap"/>
        <file src="/usr/share/systemtap/tapset"/>
    </contents>
</package>
