<?xml version="1.0" encoding="utf-8"?>
<control xmlns:xi="http://www.w3.org/2001/XInclude">
    <defines>
        <def name="BOLT_BUILD_DIR" value="build"/>
    </defines>

    <source name="ruby2.4" architecture-independent="false">
        <description>
            <summary>Interpreter of object-oriented scripting language Ruby</summary>
            <p>
            Ruby is the interpreted scripting language for quick and easy
            object-oriented programming. It has many features to process text
            files and to do system management tasks (as in perl). It is simple,
            straight-forward, and extensible.
            </p>
            <p>
            In the name of this package, `2.4' indicates the Ruby library compatibility
            version. This package currently provides the `2.4.x' branch of Ruby.
            </p>
        </description>

        <sources>
            <file src="ruby-2.4.1.tar.gz" subdir="sources"
                sha256sum="39687a693aa270197083e89aeb35c6a310a3f9e9df7dbec706457dce253a32f8"/>
        </sources>

        <requires>
            <package name="autotools-dev"/>
            <package name="bison"/>
            <package name="chrpath"/>
            <package name="coreutils" version=">= 7.5"/>
            <package name="file"/>
            <package name="libffi-dev"/>
            <package name="libgdbm-dev"/>
            <package name="libgmp-dev"/>
            <package name="libncurses5-dev"/>
            <package name="libncursesw5-dev"/>
            <package name="libreadline6-dev"/>
            <package name="libssl1.0-dev"/>
            <package name="libyaml-dev"/>
            <package name="netbase"/>
            <package name="openssl"/>
            <package name="procps"/>
            <package name="ruby"/>
            <package name="rubygems-integration" version=">= 1.6"/>
            <package name="systemtap-sdt-dev"/>
            <package name="tcl8.6-dev"/>
            <package name="tk8.6-dev"/>
            <package name="zlib1g-dev"/>
        </requires>

        <xi:include href="rules.xml"/>
    </source>

    <xi:include href="ruby2.4.xml"/>
    <xi:include href="libruby2.4.xml"/>
    <xi:include href="ruby2.4-dev.xml"/>

    <xi:include href="changelog.xml"/>
</control>
