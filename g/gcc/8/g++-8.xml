<?xml version="1.0" encoding="utf-8"?>
<package name="g++-6" section="devel">
    <description>
        <summary>GNU C++ compiler</summary>
        <p>
        This is the GNU C++ compiler, a fairly portable optimizing compiler for C++.
        </p>
    </description>

    <requires>
        <package name="gcc-6-base" version="=="
            cross-tools-prefix="tools-target-"/>
        <package name="gcc-6" version="=="
            cross-tools-prefix="tools-target-"/>
        <package name="libstdc++-6-dev" version="=="
            cross-tools-prefix="tools-target-"/>
    </requires>

    <provides>
        <package name="g++" cross-tools-prefix=""/>
    </provides>

    <contents subdir="g++-6">
        <file src="/"/>
    </contents>
</package>
