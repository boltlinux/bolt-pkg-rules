<?xml version="1.0" encoding="utf-8"?>
<package name="libglib2.0-dev" section="libdevel">
    <description>
        <summary>Development files for the GLib library</summary>
        <p>
        GLib is a library containing many useful C routines for things such
        as trees, hashes, lists, and strings. It is a useful general-purpose
        C library used by projects such as GTK+, GIMP, and GNOME.
        </p>
        <p>
        This package is needed to compile programs against libglib2.0-0,
        as only it includes the header files and static libraries (optionally)
        needed for compiling.
        </p>
    </description>

    <requires>
        <package name="libglib2.0-0" version="=="/>
        <package name="libglib2.0-bin" version="=="/>
        <package name="libpcre3-dev" version=">= 1:8.31"/>
        <package name="pkg-config"/>
        <package name="zlib1g-dev"/>
    </requires>

    <contents>
        <file src="${prefix}/bin/gdbus-codegen"/>
        <file src="${prefix}/bin/glib-genmarshal"/>
        <file src="${prefix}/bin/glib-gettextize"/>
        <file src="${prefix}/bin/glib-mkenums"/>
        <file src="${prefix}/bin/gobject-query"/>
        <file src="${prefix}/bin/gtester"/>
        <file src="${prefix}/bin/gtester-report"/>
        <file src="${prefix}/include/gio-unix-2.0/gio"/>
        <file src="${prefix}/include/glib-2.0"/>
        <file src="${prefix}/lib/glib-2.0/include"/>
        <file src="${prefix}/lib/libgio-2.0.a"/>
        <file src="${prefix}/lib/libgio-2.0.so"/>
        <file src="${prefix}/lib/libglib-2.0.a"/>
        <file src="${prefix}/lib/libglib-2.0.so"/>
        <file src="${prefix}/lib/libgmodule-2.0.a"/>
        <file src="${prefix}/lib/libgmodule-2.0.so"/>
        <file src="${prefix}/lib/libgobject-2.0.a"/>
        <file src="${prefix}/lib/libgobject-2.0.so"/>
        <file src="${prefix}/lib/libgthread-2.0.a"/>
        <file src="${prefix}/lib/libgthread-2.0.so"/>
        <file src="${prefix}/lib/pkgconfig"/>
        <file src="${prefix}/share/aclocal"/>
        <file src="${prefix}/share/glib-2.0/codegen"/>
        <file src="${prefix}/share/glib-2.0/gettext/po"/>
        <file src="${prefix}/share/glib-2.0/schemas"/>
    </contents>
</package>
