<?xml version="1.0" encoding="utf-8"?>
<package name="gdb" section="devel">
    <description>
        <summary>GNU Debugger</summary>
        <p>
        GDB is a source-level debugger, capable of breaking programs at
        any specific line, displaying variable values, and determining
        where errors occurred. Currently, gdb supports C, C++, D,
        Objective-C, Fortran, Java, OpenCL C, Pascal, assembly, Modula-2,
        Go, and Ada. A must-have for any serious programmer.
        </p>
    </description>

    <requires>
        <package name="libbabeltrace1" version=">= 1.5.4"/>
        <package name="libexpat1" version=">= 2.0.1"/>
        <package name="libipt2" version=">= 2.0"/>
        <package name="liblzma5" version=">= 5.1.1alpha+20110809"/>
        <package name="libncursesw6" version=">= 6"/>
        <package name="libpython3.7" version=">= 3.7.0"/>
        <package name="libreadline7" version=">= 6.0"/>
        <package name="libtinfo6" version=">= 6"/>
        <package name="zlib1g" version=">= 1:1.2.0"/>
    </requires>

    <contents>
        <dir src="/etc/gdb"/>
        <dir src="/usr/share/gdb"/>
        <dir src="/usr/share/gdb/python"/>

        <file src="/etc/gdb/gdbinit"/>
        <file src="/usr/bin/gcore"/>
        <file src="/usr/bin/gdb"/>
        <file src="/usr/bin/gdb-add-index"/>
        <file src="/usr/bin/gdbtui"/>
        <file src="/usr/include/gdb"/>
        <file src="/usr/share/gdb/python/gdb"/>
        <file src="/usr/share/gdb/syscalls"/>
        <file src="/usr/share/gdb/system-gdbinit"/>
    </contents>
</package>
