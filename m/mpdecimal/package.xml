                sha256sum="ae3cd5654c585a388a971af4586b227ab87dac29f565141794bf45fb45b5abb6"/>
        </sources>

        <requires>
            <package name="debhelper" version=">= 9"/>
            <package name="autotools-dev"/>
            <package name="libgmp-dev"/>
        </requires>

        <xi:include href="rules.xml"/>
    </source>

    <xi:include href="libmpdec-dev.xml"/>
