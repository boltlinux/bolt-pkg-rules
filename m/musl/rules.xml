<?xml version="1.0" encoding="utf-8"?>
<rules>

    <prepare>
    <![CDATA[

cd "$BOLT_BUILD_DIR"
sed -i 's@/lib:/usr/local/lib:/usr/lib@/usr/lib:/usr/local/lib@g' ldso/dynlink.c

./configure \
    --prefix=/usr \
    --syslibdir=/usr/lib

    ]]>
    </prepare>

    <build>
    <![CDATA[

cd "$BOLT_BUILD_DIR"
make -j"$BOLT_PARALLEL_JOBS"

    ]]>
    </build>

    <install>
    <![CDATA[

cd "$BOLT_BUILD_DIR"
make DESTDIR="$BOLT_INSTALL_DIR" install

    ]]>
    </install>

</rules>
