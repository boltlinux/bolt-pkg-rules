<?xml version="1.0" encoding="utf-8"?>
<package name="busybox-maildrop-symlinks" section="admin">
    <description>
        <summary>Substitutes for (some) programs from the maildrop package</summary>
        <p>
            This package contains the symbolic links for the following applets:
        </p>
        <ul>
            <li>makemime</li>
            <li>reformime</li>
        </ul>
    </description>

    <requires>
        <package name="busybox"/>
    </requires>

    <conflicts>
        <package name="maildrop"/>
    </conflicts>

    <contents>
        <file src="${prefix}/bin/makemime"/>
        <file src="${prefix}/bin/reformime"/>
    </contents>
</package>
