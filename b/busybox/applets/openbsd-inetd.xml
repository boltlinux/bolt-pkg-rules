<?xml version="1.0" encoding="utf-8"?>
<package name="busybox-openbsd-inetd-symlinks" section="admin">
    <description>
        <summary>Substitutes for (some) programs from the openbsd-inetd package</summary>
        <p>
            This package contains the symbolic links for the following applets:
        </p>
        <ul>
            <li>inetd</li>
        </ul>
    </description>

    <requires>
        <package name="busybox"/>
    </requires>

    <conflicts>
        <package name="openbsd-inetd"/>
    </conflicts>

    <contents>
        <file src="${prefix}/sbin/inetd"/>
    </contents>
</package>
