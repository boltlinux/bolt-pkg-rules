<?xml version="1.0" encoding="utf-8"?>
<package name="busybox-procps-symlinks" section="admin">
    <description>
        <summary>Substitutes for (some) programs from the procps package</summary>
        <p>
            This package contains the symbolic links for the following applets:
        </p>
        <ul>
            <li>free</li>
            <li>kill</li>
            <li>pgrep</li>
            <li>pkill</li>
            <li>pmap</li>
            <li>ps</li>
            <li>pwdx</li>
            <li>top</li>
            <li>uptime</li>
            <li>watch</li>
        </ul>
    </description>

    <requires>
        <package name="base-files"/>
        <package name="busybox"/>
    </requires>

    <conflicts>
        <package name="procps"/>
    </conflicts>

    <replaces>
        <package name="procps"/>
    </replaces>

    <contents>
        <file src="${prefix}/bin/free"/>
        <file src="${prefix}/bin/kill"/>
        <file src="${prefix}/bin/pgrep"/>
        <file src="${prefix}/bin/pkill"/>
        <file src="${prefix}/bin/pmap"/>
        <file src="${prefix}/bin/ps"/>
        <file src="${prefix}/bin/pwdx"/>
        <file src="${prefix}/bin/top"/>
        <file src="${prefix}/bin/uptime"/>
        <file src="${prefix}/bin/watch"/>
    </contents>
</package>
