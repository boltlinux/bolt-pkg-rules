<?xml version="1.0" encoding="utf-8"?>
<package name="busybox-nbd-client-symlinks" section="admin">
    <description>
        <summary>Substitutes for (some) programs from the nbd-client package</summary>
        <p>
            This package contains the symbolic links for the following applets:
        </p>
        <ul>
            <li>nbd-client</li>
        </ul>
    </description>

    <requires>
        <package name="base-files"/>
        <package name="busybox"/>
    </requires>

    <conflicts>
        <package name="nbd-client"/>
    </conflicts>

    <replaces>
        <package name="nbd-client"/>
    </replaces>

    <contents>
        <file src="${prefix}/sbin/nbd-client"/>
    </contents>
</package>
