<?xml version="1.0" encoding="utf-8"?>
<package name="busybox-xz-utils-symlinks" section="admin">
    <description>
        <summary>Substitutes for (some) programs from the xz-utils package</summary>
        <p>
            This package contains the symbolic links for the following applets:
        </p>
        <ul>
            <li>lzcat</li>
            <li>lzma</li>
            <li>unlzma</li>
            <li>unxz</li>
            <li>xz</li>
            <li>xzcat</li>
        </ul>
    </description>

    <requires>
        <package name="busybox"/>
    </requires>

    <conflicts>
        <package name="xz-utils"/>
    </conflicts>

    <replaces>
        <package name="xz-utils"/>
    </replaces>

    <contents>
        <file src="${prefix}/bin/lzcat"/>
        <file src="${prefix}/bin/lzma"/>
        <file src="${prefix}/bin/unlzma"/>
        <file src="${prefix}/bin/unxz"/>
        <file src="${prefix}/bin/xz"/>
        <file src="${prefix}/bin/xzcat"/>
    </contents>
</package>
