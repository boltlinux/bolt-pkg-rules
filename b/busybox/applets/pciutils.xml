<?xml version="1.0" encoding="utf-8"?>
<package name="busybox-pciutils-symlinks" section="admin">
    <description>
        <summary>Substitutes for (some) programs from the pciutils package</summary>
        <p>
            This package contains the symbolic links for the following applets:
        </p>
        <ul>
            <li>lspci</li>
        </ul>
    </description>

    <requires>
        <package name="busybox"/>
    </requires>

    <provides>
        <package name="pciutils"/>
    </provides>

    <conflicts>
        <package name="pciutils"/>
    </conflicts>

    <replaces>
        <package name="pciutils"/>
    </replaces>

    <contents>
        <file src="${prefix}/bin/lspci"/>
    </contents>
</package>
