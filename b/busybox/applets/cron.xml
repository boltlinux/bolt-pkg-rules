<?xml version="1.0" encoding="utf-8"?>
<package name="busybox-cron-symlinks" section="admin">
    <description>
        <summary>Substitutes for (some) programs from the cron package</summary>
        <p>
            This package contains the symbolic links for the following applets:
        </p>
        <ul>
            <li>crontab</li>
        </ul>
    </description>

    <requires>
        <package name="base-files"/>
        <package name="busybox"/>
    </requires>

    <conflicts>
        <package name="cron"/>
    </conflicts>

    <replaces>
        <package name="cron"/>
    </replaces>

    <contents>
        <file src="${prefix}/bin/crontab"/>
    </contents>
</package>
