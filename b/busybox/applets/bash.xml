<?xml version="1.0" encoding="utf-8"?>
<package name="busybox-bash-symlinks" section="admin">
    <description>
        <summary>Substitutes for (some) programs from the bash package</summary>
        <p>
            This package contains the symbolic links for the following applets:
        </p>
        <ul>
            <li>bash</li>
        </ul>
    </description>

    <requires>
        <package name="base-files"/>
        <package name="busybox"/>
    </requires>

    <conflicts>
        <package name="bash"/>
    </conflicts>

    <replaces>
        <package name="bash"/>
    </replaces>

    <contents>
        <file src="${prefix}/bin/bash"/>
    </contents>
</package>
