<?xml version="1.0" encoding="utf-8"?>
<package name="busybox-bsdutils-symlinks" section="admin">
    <description>
        <summary>Substitutes for (some) programs from the bsdutils package</summary>
        <p>
            This package contains the symbolic links for the following applets:
        </p>
        <ul>
            <li>logger</li>
            <li>renice</li>
            <li>script</li>
            <li>scriptreplay</li>
            <li>wall</li>
        </ul>
    </description>

    <requires>
        <package name="busybox"/>
    </requires>

    <conflicts>
        <package name="bsdutils"/>
    </conflicts>

    <contents>
        <file src="${prefix}/bin/logger"/>
        <file src="${prefix}/bin/renice"/>
        <file src="${prefix}/bin/script"/>
        <file src="${prefix}/bin/scriptreplay"/>
        <file src="${prefix}/bin/wall"/>
    </contents>
</package>
