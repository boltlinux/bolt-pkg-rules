<?xml version="1.0" encoding="utf-8"?>
<package name="busybox-kmod-symlinks" section="admin">
    <description>
        <summary>Substitutes for (some) programs from the kmod package</summary>
        <p>
            This package contains the symbolic links for the following applets:
        </p>
        <ul>
            <li>depmod</li>
            <li>insmod</li>
            <li>lsmod</li>
            <li>modinfo</li>
            <li>modprobe</li>
            <li>rmmod</li>
        </ul>
    </description>

    <requires>
        <package name="base-files"/>
        <package name="busybox"/>
    </requires>

    <conflicts>
        <package name="kmod"/>
    </conflicts>

    <replaces>
        <package name="kmod"/>
    </replaces>

    <contents>
        <file src="/usr/sbin/depmod"/>
        <file src="/usr/sbin/insmod"/>
        <file src="/usr/sbin/lsmod"/>
        <file src="/usr/sbin/modinfo"/>
        <file src="/usr/sbin/modprobe"/>
        <file src="/usr/sbin/rmmod"/>
    </contents>
</package>
