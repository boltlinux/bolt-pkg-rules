<?xml version="1.0" encoding="utf-8"?>
<package name="busybox-iproute2-symlinks" section="admin">
    <description>
        <summary>Substitutes for (some) programs from the iproute2 package</summary>
        <p>
            This package contains the symbolic links for the following applets:
        </p>
        <ul>
            <li>ip</li>
            <li>tc</li>
            <li>ipaddr</li>
            <li>iplink</li>
            <li>ipneigh</li>
            <li>iproute</li>
            <li>iprule</li>
        </ul>
    </description>

    <requires>
        <package name="busybox"/>
    </requires>

    <provides>
        <package name="iproute2"/>
    </provides>

    <conflicts>
        <package name="iproute2"/>
    </conflicts>

    <replaces>
        <package name="iproute2"/>
    </replaces>

    <contents>
        <file src="${prefix}/sbin/ip"/>
        <file src="${prefix}/sbin/tc"/>
        <file src="${prefix}/sbin/ipaddr"/>
        <file src="${prefix}/sbin/iplink"/>
        <file src="${prefix}/sbin/ipneigh"/>
        <file src="${prefix}/sbin/iproute"/>
        <file src="${prefix}/sbin/iprule"/>
    </contents>
</package>
