<?xml version="1.0" encoding="utf-8"?>
<package name="busybox-inetutils-ftpd-symlinks" section="admin">
    <description>
        <summary>Substitutes for (some) programs from the inetutils-ftpd package</summary>
        <p>
            This package contains the symbolic links for the following applets:
        </p>
        <ul>
            <li>ftpd</li>
        </ul>
    </description>

    <requires>
        <package name="busybox"/>
    </requires>

    <conflicts>
        <package name="inetutils-ftpd"/>
    </conflicts>

    <replaces>
        <package name="inetutils-ftpd"/>
    </replaces>

    <contents>
        <file src="${prefix}/sbin/ftpd"/>
    </contents>
</package>
