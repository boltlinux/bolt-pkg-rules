<?xml version="1.0" encoding="utf-8"?>
<package name="busybox-vim-nox-symlinks" section="admin">
    <description>
        <summary>Substitutes for (some) programs from the vim-nox package</summary>
        <p>
            This package contains the symbolic links for the following applets:
        </p>
        <ul>
            <li>vi</li>
        </ul>
    </description>

    <requires>
        <package name="base-files"/>
        <package name="busybox"/>
    </requires>

    <conflicts>
        <package name="vim-nox"/>
    </conflicts>

    <replaces>
        <package name="vim-nox"/>
    </replaces>

    <contents>
        <file src="${prefix}/bin/vi"/>
    </contents>
</package>
