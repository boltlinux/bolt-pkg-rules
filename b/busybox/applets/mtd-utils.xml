<?xml version="1.0" encoding="utf-8"?>
<package name="busybox-mtd-utils-symlinks" section="admin">
    <description>
        <summary>Substitutes for (some) programs from the mtd-utils package</summary>
        <p>
            This package contains the symbolic links for the following applets:
        </p>
        <ul>
            <li>flashcp</li>
            <li>flash_eraseall</li>
            <li>flash_lock</li>
            <li>flash_unlock</li>
            <li>nanddump</li>
            <li>nandwrite</li>
            <li>ubiattach</li>
            <li>ubidetach</li>
            <li>ubimkvol</li>
            <li>ubirmvol</li>
            <li>ubirsvol</li>
            <li>ubiupdatevol</li>
        </ul>
    </description>

    <requires>
        <package name="base-files"/>
        <package name="busybox"/>
    </requires>

    <conflicts>
        <package name="mtd-utils"/>
    </conflicts>

    <replaces>
        <package name="mtd-utils"/>
    </replaces>

    <contents>
        <file src="${prefix}/sbin/flashcp"/>
        <file src="${prefix}/sbin/flash_eraseall"/>
        <file src="${prefix}/sbin/flash_lock"/>
        <file src="${prefix}/sbin/flash_unlock"/>
        <file src="${prefix}/sbin/nanddump"/>
        <file src="${prefix}/sbin/nandwrite"/>
        <file src="${prefix}/sbin/ubiattach"/>
        <file src="${prefix}/sbin/ubidetach"/>
        <file src="${prefix}/sbin/ubimkvol"/>
        <file src="${prefix}/sbin/ubirmvol"/>
        <file src="${prefix}/sbin/ubirsvol"/>
        <file src="${prefix}/sbin/ubiupdatevol"/>
    </contents>
</package>
