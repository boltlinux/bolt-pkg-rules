<?xml version="1.0" encoding="utf-8"?>
<package name="busybox-ifenslave-symlinks" section="admin">
    <description>
        <summary>Substitutes for (some) programs from the ifenslave package</summary>
        <p>
            This package contains the symbolic links for the following applets:
        </p>
        <ul>
            <li>ifenslave</li>
        </ul>
    </description>

    <requires>
        <package name="busybox"/>
    </requires>

    <conflicts>
        <package name="ifenslave"/>
    </conflicts>

    <replaces>
        <package name="ifenslave"/>
    </replaces>

    <contents>
        <file src="${prefix}/sbin/ifenslave"/>
    </contents>
</package>
