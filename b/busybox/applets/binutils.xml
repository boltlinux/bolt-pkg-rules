<?xml version="1.0" encoding="utf-8"?>
<package name="busybox-binutils-symlinks" section="admin">
    <description>
        <summary>Substitutes for (some) programs from the binutils package</summary>
        <p>
            This package contains the symbolic links for the following applets:
        </p>
        <ul>
            <li>ar</li>
            <li>strings</li>
        </ul>
    </description>

    <requires>
        <package name="busybox"/>
    </requires>

    <conflicts>
        <package name="binutils"/>
    </conflicts>

    <contents>
        <file src="${prefix}/bin/ar"/>
        <file src="${prefix}/bin/strings"/>
    </contents>
</package>
