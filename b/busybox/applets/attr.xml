<?xml version="1.0" encoding="utf-8"?>
<package name="busybox-attr-symlinks" section="admin">
    <description>
        <summary>Substitutes for (some) programs from the attr package</summary>
        <p>
            This package contains the symbolic links for the following applets:
        </p>
        <ul>
            <li>setfattr</li>
        </ul>
    </description>

    <requires>
        <package name="busybox"/>
    </requires>

    <conflicts>
        <package name="attr"/>
    </conflicts>

    <contents>
        <file src="${prefix}/bin/setfattr"/>
    </contents>
</package>
