<?xml version="1.0" encoding="utf-8"?>
<package name="bolt-package" section="utils">
    <description>
        <summary>Bolt OS' package generator</summary>
        <p>
        The Bolt OS Package Generator turns a set of source archives and
        patches into ready-to-install binary packages. Rules for compilation
        of sources, package contents and a simple changelog are kept in an
        XML spec format resembling Debian package rules.
        </p>
    </description>

    <requires>
        <package name="python3"/>
        <package name="python3-dateutil"/>
        <package name="python3-lxml"/>
        <package name="python3-magic"/>
        <package name="binutils" tools-prefix="tools-target-"/>
        <package name="binutils" tools-prefix="tools-"/>
        <package name="chrpath"/>
        <package name="libarchive-dev"/>
    </requires>

    <contents>
        <file src="${prefix}/bin"/>
        <file src="${prefix}/lib"/>
    </contents>
</package>
